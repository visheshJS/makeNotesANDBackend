    <p class="text-lg text-gray-400 mb-6 text-center">Your ideas, organized in one place.</p>

    <!-- Buttons Section -->
    <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
      <a href="/login" class="px-6 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition w-full text-center">Login</a>
      <a href="/signup" class="px-6 py-2 bg-black border border-none text-white rounded-lg hover:bg-slate-950 transition w-full text-center outline-none">Register</a>
    </div>
  </div>

